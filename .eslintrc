{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "semi": ["error", "never"],
    "no-undef": 0,
    "no-unused-vars": 0,
    "no-console": 0,
    "react/jsx-uses-vars": [2],
    "comma-dangle": ["error", "never"],
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  }
}
