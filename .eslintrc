{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": ["error", "never"],
    "no-undef": 0,
    "no-unused-vars": 0,
    "no-console": 0,
    "react/jsx-uses-vars": [2],
    "cypress/no-unnecessary-waiting": 0
  },
  "extends": [
    "plugin:cypress/recommended"
  ]
}
